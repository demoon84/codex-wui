{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "downlevelIteration": true,
        "strict": true,
        "outDir": "./dist-electron",
        "rootDir": "./electron",
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "electron/**/*.ts"
    ]
}